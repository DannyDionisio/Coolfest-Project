<header>
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">
      <img src="/images/logo.png" width="100" height="120" alt="logo">
    </a>
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link" href="/auth/signup">Sign Up</a>
      </li>
    </ul>
  </nav>
</header>
<div class="bg-log-signup">
  <h2>LOGIN</h2>
  <div class="container-log-sign">
    <form action="/auth/login" method="POST" id="form" class="box-login">
      <div class="aln-form">
        <div class="style-form">
          <label for="required-name">Username:</label>
          <input type="text" name="username" id="required-name" required>
          <span class="help-text"></span>
        </div>
        <div class="style-form">
          <label for="required-pw">Password:</label>
          <input type="password" name="password" id="required-pw" required>
          <span class="help-text"></span>
        </div>
        <button class="style-btn" type="submit">Login</button>
        <h1>{{errorMessage}}</h1>
      </div>
      <div class="">
        <p>Don't have an account? <a href="signup">Sign Up</a></p>
      </div>
    </form>
    
  </div>
</div>