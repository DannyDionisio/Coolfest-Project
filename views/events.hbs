
<header>
  <nav class="navbar navbar-light">
    <a class="navbar-brand" href="../">
      <img src="/images/logo.png" width="100" height="120" alt="logo">
    </a>
<ul class="nav">
    <li class="nav-item">
        <a class="nav-link active" href="/events/create-event">HOST AN EVENT</a>
      </li>
  </nav>
</header>

<div class="bg-event">
  <h1> Choose your CoMeal event or host your own dinner party!</h1>
  <h1>{{title}}</h1>
  <div class="ctn-wrap">
    {{#each events}}
    <div class="ctn-card">
      <div class="card" style="width: 18rem;">
        <img src="{{this.imgPath}}" class="card-img-top" alt="Event Image">
        <div class="card-body">
          <h5> {{ this.title }} </h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Recipe: {{ this.recipe }}</li>
          <li class="list-group-item">When: {{ this.date }}</li>
          <li class="list-group-item">Where: {{ this.place }}</li>
          <li class="list-group-item">CO MEAL attendees: {{ this.capacity }}</li>  
        </ul>
        <div class="card-body">
          <a href="/events/{{ this._id }}" class="card-link">See this event</a>
        </div>
      </div>
      <a href="/events/{{ this._id }}/edit">Edit</a>
      <form action="/events/{{ this._id }}/delete" method="POST">
        <button> Delete </button>
      </form>
    </div>
    {{/each}}
  </div>
</div>