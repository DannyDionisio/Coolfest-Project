  <nav class="navbar navbar-light">
    <a class="navbar-brand" href="../">
      <img src="/images/logo.png" width="100" height="120" alt="logo">
    </a>
    <ul class="nav">
      <li class="nav-item">
        <h1> LET'S COOK!</h1>
      </li>
    </ul>
  </nav>
</header>
<div class="bg-log-signup">
  <h2> CREATE YOUR EVENT</h2>
  <div class="container-log-sign event">
    <form action="/events/create-event" method="POST" enctype="multipart/form-data">
      <div class="style-form style-container">
        <label for="">Title:</label>
        <input type="text" name="title" id="required-name"> 
        
        <label for="" class="title-preferences">Date:</label>
        <input type="date" name="date" id="required-name">
        
        <label for="" class="title-preferences">Capacity:</label>
        <input type="number" name="capacity" id="required-name">
        
        <label for="" class="title-preferences">Place:</label>
        <input type="text" name="place" id="required-name">
        
        <label for="" class="title-preferences">Contact</label>
        <input type="number" name="contacts" id="required-name">
        
        <label for="" class="title-preferences">Recipe:</label>
        <select name="recipe" id="required-name" class="custom-select">
          <option selected>Choose a recipe to cook</option>
          {{#each recipes}}
            <option value="{{this.title}}">{{this.title}}</option>
          {{/each}}
        </select>

        <label for="" class="title-preferences">Comment:</label>
        <input type="datetime" name="comment">



        <label for="" class="title-preferences">Upload Event Picture</label>
        <input type="file" name="photo" class="upload-pic">
        <button type="submit" class="style-btn btn-signup">Create Your Event!</button>
      </div>
    </form>


