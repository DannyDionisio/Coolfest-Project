<header>
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="../">
      <img src="/images/logo.png" width="100" height="120" alt="logo">
    </a>
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link active" href="/auth/login">LOGIN</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/auth/signup">SIGN UP</a>
      </li>
    </ul>
  </nav>
</header>
<div class="bg-index">
  <div class="container">
    <div class="bg-form">
      <h1>Find someone to cook with you at {{title}}</h1>
      <form class="form-inline search-form">
        <input class="form-control mr-sm-2 search" type="search" placeholder="Search..." aria-label="Search">
        <a class="btn btn-outline-success my-2 my-sm-0" type="submit" href="/search">Search</a>
      </form>
      <div>
        <h2>Future Events</h2>
        <a href="/events/create-event">create an event</a>
      </div>
      <div>
        <h2>Past Events</h2>
       
      </div>
    

<div class="ctn-wrap">
    {{#each events}}
    <div class="ctn-card">
      <div class="card" style="width: 18rem;">
        <img src="{{this.imgPath}}" class="card-img-top" alt="Event Image">
        <div class="card-body">
          <h5> {{ this.title }} </h5>
          <p class="card-text">Description: {{ this.comment }}</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Recipe: {{ this.recipe }}</li>
          <li class="list-group-item">When: {{ this.date }}</li>
          <li class="list-group-item">Where: {{ this.place }}</li>
          <li class="list-group-item">CO MEAL attendees: {{ this.capacity }}</li>  
        </ul>
        <div class="card-body">
          <a href="/events/{{ this._id }}" class="card-link">See this event</a>
        </div>
      </div>
      <a href="/events/{{ this._id }}/edit">Edit</a>
      <form action="/events/{{ this._id }}/delete" method="POST">
        <button> Delete </button>
      </form>
    </div>
    {{/each}}
  </div>
</div>





    </div>
  </div>
</div>



